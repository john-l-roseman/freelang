PROMPT="../../Scripts/drag-and-drop"
LANGUAGE=`pwd | awk -F/ '{print $(NF-1)}'`;
GAME=`pwd | awk -F/ '{print $NF}'`;
COLOR=`cat ../color`;
CARDS_PER_ROUND=`cat ../../Rules/$Game/count`

FILE="/dev/null";
TRANSLATE="Text-Translate";

(
cat "../../Rules/$GAME";
cat $FILE;
cat "../../Scripts/$TRANSLATE";
cat $PROMPT ;
cat ../addendum
cat ../../Copyright
)| sed "s/LANGUAGE/$LANGUAGE/g" | sed "s/COLOR/$COLOR/" | 
	sed "s/CARDS_PER_ROUND/$CARDS_PER_ROUND/" | 
	sed "s/GAME/$GAME/g" > build-instructions.txt


exit;
date;
python3.10 /usr/local/bin/run-gemini-streaming.py build-instructions.txt index.html 
date;


