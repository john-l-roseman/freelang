GAMES=` printf '%s,' [A-Z]*`
QUOTE_GAMES=` printf '%s,' [A-Z]* | grep -i quote`
PHRASE_GAMES=` printf '%s,' [A-Z]* | grep -i phrase`
WORD_GAMES=` printf '%s,' [A-Z]* | egrep -i -v phrase|quote`

LANGUAGE=`pwd | awk -F/ '{print $(NF)}'`;
PROMPT="landing-page";

(
cat ../Scripts/$PROMPT;
cat ../Copyright
)| sed "s/LANGUAGE/$LANGUAGE/g" | sed "s/GAMES/$GAMES/g" > build-instructions.txt

exit;
date;
python3.10 /usr/local/bin/run-gemini.py build-instructions.txt index.html 
date;


